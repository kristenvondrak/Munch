<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>


    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDarker</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowBackground">@color/colorPrimary</item>

        <item name="colorControlNormal">@color/transparentWhite</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/transparentWhite</item>

        <item name="colorButtonNormal">@color/colorPrimaryDarker</item>
        <item name="android:colorButtonNormal">@color/colorPrimaryDarker</item>

    </style>

    <style name="AppTheme.Nutrition" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>

        <item name="android:windowBackground">@color/colorPrimary</item>

        <item name="colorControlNormal">@color/aluminum</item>
        <item name="colorControlActivated">@color/aluminum</item>
        <item name="colorControlHighlight">@color/colorPrimaryDarker</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:editTextColor">@color/black</item>

        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="android:colorButtonNormal">@color/colorPrimaryDark</item>

    </style>

    <style name="AppTheme.AddFood" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/diaryAccent</item>
        <item name="colorControlNormal">@color/lightIron</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:textColorHint">@color/transparentWhite</item>
        <item name="android:editTextColor">@color/white</item>

        <item name="android:windowBackground">@android:color/background_light</item>

    </style>

    <style name="AppTheme.Diary" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/diaryAccent</item>

        <item name="android:windowBackground">@color/colorPrimary</item>

        <item name="colorControlNormal">@color/aluminum</item>
        <item name="colorControlActivated">@color/aluminum</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:editTextColor">@color/black</item>

        <item name="colorButtonNormal">@color/diaryAccent</item>
        <item name="android:colorButtonNormal">@color/diaryAccent</item>

    </style>

    <style name="AppTheme.CustomFood" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/diaryAccent</item>
        <item name="colorControlNormal">@color/lightIron</item>
        <item name="colorControlActivated">@color/diaryAccent</item>

        <item name="android:textColorHint">@color/aluminum</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">21dp</item>

        <item name="android:windowBackground">@android:color/background_light</item>

    </style>


    <style name="CustomAlertDialogStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>

        <item name="android:windowBackground">@color/colorPrimary</item>

        <item name="colorControlNormal">@color/base</item>
        <item name="colorControlActivated">@color/base</item>
        <item name="colorControlHighlight">@color/colorPrimaryDarker</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:editTextColor">@color/black</item>

        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="android:colorButtonNormal">@color/colorPrimaryDark</item>

        <item name="android:background">@android:color/background_light</item>
    </style>

    <style name="BasicAlertDialogStyle" parent="android:Theme.Holo.Light.Dialog">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorPrimaryDarker</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/base</item>
    </style>

    <style name="DeleteDialogStyle" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:gravity">center</item>
        <item name="android:textSize">20dp</item>
    </style>

</resources>
