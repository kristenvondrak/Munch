<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:background="@color/colorPrimary">

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:src="@drawable/back_arrow"
        android:background="@color/lightGray"
        android:tint="@color/white"/>

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </SearchView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/header_search_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/search"
            android:tint="@color/lightGray"
            android:background="@android:color/transparent"
            android:layout_gravity="center_vertical|left"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"/>


        <EditText
            android:id="@+id/header_search_edittext"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:singleLine="true"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:hint="Search for food items"
            android:textColor="@color/black"
            android:textColorHint="@color/lightGray"
            android:background="@null"
            android:imeOptions="actionSearch"/>

        <ImageView
            android:id="@+id/header_clear_search_btn"
            android:visibility="gone"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/cancel"
            android:tint="@color/lightGray"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="5dp"/>

    </FrameLayout>

    <TextView
        android:id="@+id/header_search_cancel_btn"
        android:layout_weight="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/text_view_white_to_gray"
        android:text="Cancel"
        android:layout_marginRight="10dp"/>


